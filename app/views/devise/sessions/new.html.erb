<div class="d-flex justify-content-center align-items-center vh-100 bg-body-secondary">

  <div class="card centered w-50">
    <div class="card-header">
      <h3>Entrar</h3>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="py-2">
          <%= f.label :email %><br/>
          <%= f.email_field :email, class: "form-control", placeholder: "E-mail", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="py-2">
          <%= f.label :password %><br/>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>


        <div class="d-flex justify-content-end py-3">
          <%= f.submit "ACESSAR", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>